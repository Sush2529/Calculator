<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:columnCount="6" android:rowCount="5">

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="C"
        android:id="@+id/btnClear"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="()"
        android:id="@+id/btnBracket"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="%"
        android:id="@+id/btnPercent"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="0"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="รท"
        android:id="@+id/btnDivision"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="7"
        android:id="@+id/btn7"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="8"
        android:id="@+id/btn8"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="9"
        android:id="@+id/btn9"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="ร"
        android:id="@+id/btnMultiply"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="4"
        android:id="@+id/btn4"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="5"
        android:id="@+id/btn5"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="6"
        android:id="@+id/btn6"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="2"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="-"
        android:id="@+id/btnMinus"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="1"
        android:id="@+id/btn1"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="2"
        android:id="@+id/btn2"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="3"
        android:id="@+id/btn3"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="3"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="+"
        android:id="@+id/btnPlus"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="0"
        android:id="@+id/btn0"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="." android:id="@+id/btnDot"
        android:layout_columnSpan="2"/>

    <Button android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="4"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:layout_columnWeight="1"
        android:textSize="25sp"
        android:fontFamily="@font/g_light"
        android:text="="
        android:id="@+id/btnEqual"/>

</GridLayout>

</RelativeLayout>